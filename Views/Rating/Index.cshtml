@model IEnumerable<Rating>

<h1 class="alert alert-danger text-center">Rating Index.</h1>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m=>m.ViewerName)</th>
                <th>@Html.DisplayNameFor(m=>m.movie.MovieTitle)</th>             
                <th>@Html.DisplayNameFor(m=>m.RatingCount)</th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rat in Model)
            {
                <tr>
                    <td>@rat.ViewerName</td>
                    <td>@rat.movie.MovieTitle</td>                   
                    <td>@rat.RatingCount</td>
                    <td>
                        <a asp-controller="Rating" asp-action="GetDetailsView" asp-route-id="@rat.RatingId" class="btn btn-outline-warning"><i class="bi bi-list-ul"></i></a>
                        <a asp-controller="Rating" asp-action="GetEditView" asp-route-id="@rat.RatingId" class="btn btn-outline-primary"> <i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Rating" asp-action="GetDeleteView" asp-route-id="@rat.RatingId" class="btn btn-outline-danger"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1 class="alert alert-danger text-center">There is no Rating to display.</h1>
}

<hr />

<div class="d-flex justify-content-between my-3">


    <div>
        <a asp-controller="Rating" asp-action="GetFormToAdd" type="button" class="btn btn-primary" style="border-radius :20px">Add Rating</a>
    </div>

    <div>
        <form method="get" asp-controller="Rating" asp-action="GetIndexView">
            <div class="input-group">
                <input type="text" name="search" value="@ViewBag.Search" />
                <button type="submit" class="btn btn-secondary input-group-append"><i class="bi bi-search"></i></button>
            </div>
        </form>
    </div>




</div>




